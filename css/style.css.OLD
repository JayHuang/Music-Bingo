body {
  color: #666;
  font-family: sans-serif;
  line-height: 1.4;
}

h1 {
  color: #444;
  font-size: 1.2em;
  padding: 14px 2px 12px;
  margin: 0px;
}

h1 em {
  font-style: normal;
  color: #999;
}

a {
  color: #888;
  text-decoration: none;
}

#wrapper {
  width: 100%;
}

ol {
  padding: 0px;
  list-style: decimal-leading-zero inside;
  color: #ccc;
  font-size: 0.9em;
  -moz-column-count: 5;
  -webkit-column-count: 5;
  column-count: 5;
}
ol li {
  background-color: #EEE;
  width: 200px;
  height: 40px;
  display: inline-block;
  margin: 5px;
}
ol li a {
  padding: 10px 15px 0px;
  display: block;
  cursor: pointer;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

ol li {
  background-color: #EEE;
  width: 200px;
  height: 40px;
  display: inline-block;
  margin: 5px;
}

#player {
  margin: 0 auto;
  min-width: 500px;
}

#player h1 {
  text-align: center;
}

.audiojs {
  margin: 0 auto;
  background-image: none;
  -webkit-box-shadow: none;
  -moz-box-shadow: none;
  -o-box-shadow: none;
  box-shadow: none;
}

div#resetsongs {
  cursor: pointer;
  width: 50px;
  text-align: center;
  background-color: #F78181;
}

li.played {
  background-color: #CCC;
}

li.playing a {
  color: #000;
}

li:hover {
  background-color: #CCC;
}

li.playing {
  color: #AAA;
  background-color: #58FAAC;
}

li.queued {
  background-color: #F3F781;
}

